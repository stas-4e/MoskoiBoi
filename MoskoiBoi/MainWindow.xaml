<Window x:Class="MoskoiBoi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoskoiBoi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="CanMinimize">
    <Grid>
        <Label x:Name="lbGameModeSelection" Content="Выбор режима игры" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btOnePlayer" Content="Одиночная игра" HorizontalAlignment="Center" Margin="0,111,0,0" VerticalAlignment="Top" Height="48" Width="194"/>
        <Button x:Name="btOnline" Content="Сетевая игра" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="194"/>

    </Grid>
</Window>
